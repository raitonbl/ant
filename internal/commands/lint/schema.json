{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "commands": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/command"
      }
    },
    "description": {
      "type": "string"
    },
    "parameters": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/parameter"
      }
    },
    "exit": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "code": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "required": [
          "id",
          "code",
          "message"
        ]
      }
    },
    "schemas": {
      "type": "object",
      "allOf": [
        {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            }
          },
          "required": [
            "id"
          ]
        },
        {
          "$ref": "#/$defs/parameter"
        }
      ]
    }
  },
  "required": [
    "name",
    "version",
    "commands",
    "description"
  ],
  "$defs": {
    "parameter": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "index": {
          "type": "integer"
        },
        "short-form": {
          "type": "string"
        },
        "in": {
          "type": "string"
        },
        "required": {
          "type": "boolean"
        },
        "default": {
          "type": "string"
        },
        "schema": {
          "$ref": "#/$defs/schema"
        }
      }
    },
    "exit": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "code": {
          "type": "integer"
        },
        "message": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "command": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "parameters": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/$defs/parameter"
              },
              {
                "type": "object",
                "properties": {
                  "refers-to": {
                    "type": "string"
                  },
                  "index": {
                    "type": "number"
                  }
                },
                "required": [
                  "refers-to"
                ]
              }
            ]
          }
        },
        "exit": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/$defs/exit"
              },
              {
                "type": "object",
                "properties": {
                  "refers-to": {
                    "type": "string"
                  }
                },
                "required": [
                  "refers-to"
                ]
              }
            ]
          }
        },
        "commands": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/$defs/command"
              },
              {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "commands": {
                    "type": "array",
                    "items": {
                      "$ref": "#/$defs/command"
                    },
                    "min-items": 1
                  }
                },
                "required": [
                  "name",
                  "description",
                  "commands"
                ]
              }
            ]
          }
        }
      }
    },
    "schema": {
      "type": "object",
      "properties": {
        "multiple-of": {
          "type": "number"
        },
        "maximum": {
          "type": "integer"
        },
        "minimum": {
          "type": "integer"
        },
        "max-length": {
          "type": "integer"
        },
        "min-length": {
          "type": "integer"
        },
        "exclusive-minimum": {
          "type": "boolean"
        },
        "exclusive-maximum": {
          "type": "boolean"
        },
        "max-items": {
          "type": "integer"
        },
        "min-items": {
          "type": "integer"
        },
        "unique-items": {
          "type": "boolean"
        },
        "enum": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "pattern": {
          "type": "string"
        },
        "examples": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "type": {
          "type": "string",
          "enum": [
            "string",
            "number",
            "boolean",
            "array"
          ]
        },
        "format": {
          "type": "string",
          "enum": [
            "",
            "byte",
            "date",
            "int64",
            "int32",
            "float",
            "double",
            "binary",
            "datetime",
            "pattern"
          ]
        },
        "items": {
          "$ref": "#/$defs/schema"
        }
      },
      "required": [
        "type"
      ]
    }
  }
}